<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingBottom="15dp"
    android:paddingTop="50dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/btnClear"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outputHasil"
            android:hint="  0"/>

    </LinearLayout>


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TableRow>

            <Button
                android:id="@+id/angka7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                />

            <Button
                android:id="@+id/angka8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginTop="30dp"
                />

            <Button
                android:id="@+id/angka9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/angka4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/angka5"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/angka6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/angka1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/angka2"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/angka3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnTambah"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/angka0"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/btnKurang"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/btnKali"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/btnJumlah"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnBagi"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/btnDouble"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />
        </TableRow>

    </TableLayout>


</LinearLayout>